<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:controller="Source.Controller"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="rootPane"
            prefWidth="1920.0" prefHeight="1080.0"
            stylesheets="@Style.css">

    <!-- Main UI Pane (1920Ã—1080 design space) -->
    <Pane fx:id="scalePane" prefWidth="1920.0" prefHeight="1080.0">

        <!-- Game Canvas (where gameplay is rendered) -->
        <Canvas fx:id="gameCanvas"
                width="1920.0" height="1080.0"
                visible="false" />

        <!-- ========== MAIN MENU ========== -->
        <VBox fx:id="mainMenu"
              alignment="CENTER" spacing="20"
              layoutX="660" layoutY="360"
              prefWidth="600" prefHeight="360"
              visible="true">

            <Button fx:id="startButton"
                    onAction="#onStartClicked"
                    prefWidth="300" prefHeight="80" />

            <Button fx:id="quitButton"
                    onAction="#onQuitClicked"
                    prefWidth="300" prefHeight="80" />
        </VBox>

        <!-- ========== DARK OVERLAY (laid over gameCanvas when paused) ========== -->
        <Rectangle fx:id="overlay"
                   layoutX="0" layoutY="0"
                   width="1920.0" height="1080.0"
                   visible="false" />

        <!-- ========== PAUSE MENU ========== -->
        <VBox fx:id="pauseMenu"
              alignment="CENTER" spacing="20"
              layoutX="750" layoutY="410"
              prefWidth="420" prefHeight="260"
              visible="false">

            <Button fx:id="continueButton"
                    onAction="#onContinueClicked"
                    prefWidth="300" prefHeight="80" />

            <Button fx:id="backToMenuButton"
                    onAction="#onBackToMenuClicked"
                    prefWidth="300" prefHeight="80" />
        </VBox>
		
		<!-- =============LOSE MENU============= -->
		<VBox fx:id="loseMenu"
              alignment="CENTER" spacing="20"
              layoutX="750" layoutY="410"
              prefWidth="420" prefHeight="260"
              visible="false">

            <Button fx:id="restartButton"
                    onAction="#onRestartClicked"
                    prefWidth="300" prefHeight="80" />

            <Button fx:id="backToMenuButton1"
                    onAction="#onBackToMenuClicked"
                    prefWidth="300" prefHeight="80" />
        </VBox>
		
		<!-- =============PASS MENU============= -->
		<VBox fx:id="passMenu"
              alignment="CENTER" spacing="20"
              layoutX="750" layoutY="410"
              prefWidth="420" prefHeight="260"
              visible="false">

            <Button fx:id="continueButton1"
                    onAction="#onContinueClicked"
                    prefWidth="300" prefHeight="80" />

            <Button fx:id="backToMenuButton2"
                    onAction="#onBackToMenuClicked"
                    prefWidth="300" prefHeight="80" />
        </VBox>
		
		<!-- =============WIN MENU============= -->
		<VBox fx:id="winMenu"
              alignment="CENTER" spacing="20"
              layoutX="750" layoutY="410"
              prefWidth="420" prefHeight="260"
              visible="false">

            <Button fx:id="restartButton1"
                    onAction="#onRestartClicked"
                    prefWidth="300" prefHeight="80" />

            <Button fx:id="backToMenuButton3"
                    onAction="#onBackToMenuClicked"
                    prefWidth="300" prefHeight="80" />
        </VBox>

    </Pane>
</AnchorPane>