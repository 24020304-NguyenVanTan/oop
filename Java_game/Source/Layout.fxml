<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:controller="Source.Controller"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1920.0" prefHeight="1080.0"
            fx:id="rootPane">


    <Pane fx:id="uiPane" prefWidth="1920" prefHeight="1080">

        <Button fx:id="startButton"
                text="New Game"
                prefWidth="300" prefHeight="80"
                layoutX="810" layoutY="400"
                onAction="#onStartClick"
                onMouseEntered="#onButtonHover"
                onMouseExited="#onButtonExit"
                style="
                    -fx-font-size: 28px;
                    -fx-background-color: #2e8b57;
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-background-radius: 12;
                "/>

        <Button fx:id="exitButton"
                text="Quit"
                prefWidth="300" prefHeight="80"
                layoutX="810" layoutY="520"
                onAction="#onExitClick"
                style="
                    -fx-font-size: 28px;
                    -fx-background-color: #2e8b57;
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-background-radius: 12;
                "/>

    </Pane>
</AnchorPane>
